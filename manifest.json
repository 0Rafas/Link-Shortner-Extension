{
  "manifest_version": 3,
  "name": "Quick Link Shortener",
  "version": "1.0",
  "description": "Quickly shorten URLs using a free service.",
  "permissions": [],
  "host_permissions": [
    "https://is.gd/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

